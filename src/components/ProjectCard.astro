---
import { Image } from 'astro:assets';
export interface Props {
  title: string;
  description: string;
  image?: string;
  link?: string;
}
const { title, description, image, link} = Astro.props; 
---

<article class="card bg-white shadow-md rounded-lg overflow-hidden flex flex-col">
   <!-- <Image
      src={image}
      alt={title}
      class="w-full h-48 object-cover"
      loading="lazy"
    /> -->
  
  <div class="p-6 flex flex-col justify-between">
    <h3 class="text-xl font-bold">{title}</h3>
    <p class="mt-2 text-gray-700">{description}</p>
    
    <a href={link} class="mt-4 inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800">
      View Project
      <svg class="ml-2 w-4 h-4" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
        <path d="M10.293 3.293a1 1 0 01 1.414 0l6 6a1 1 0 01 0 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293z" />
      </svg>
    </a>
    
  </div>
</article>
